{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "processId": "${command:PickProcess}"
        },
        {
            "name": "Debug tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "${file}",
                "--exit",
                "--colors",
                "--no-timeouts"
            ],
            "cwd": "${workspaceRoot}"
        }
    ]
}